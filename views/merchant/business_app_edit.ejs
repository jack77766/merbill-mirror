<% include ../partials/header.ejs %>
    

<div class='container form-format'>
    <div class='title-format pt-3 pb-3'><h3>Please Enter your details</h3></div>
    <form action="/merchant/business_app_edit?_method=PUT" method="POST" enctype="multipart/form-data"> 

         <!-- BUSINESS INFO  -->
         <div class='form-row bg-light'>
            <div class='form-group col-md-6'>    
                <label>Business Name</label>
                <input type='text' name='business[name]' value='<%=business.name%>' class='form-control' >
            </div>
            <div class='form-group col-md-6'>    
                <label>Business Registration Number</label>
                <input type='number' name='business[registration_number]' value='<%=business.registration_number%>' class='form-control' >
            </div>
        </div>
        <div class='form-row bg-light'>
            <div class='form-group col-md-6'>
                <label>Business Website</label>
                <input type='text' name='business[website]' value='<%=business.website%>' class='form-control' required>
            </div>
            <div class='form-group col-md-6'>
                    <label>Business Phone Number</label>
                    <input type='number' name='business[phone]' value='<%=business.phone%>' class='form-control'>
            </div>
        </div>

        <!-- BUSINESS ADDRESS -->
        <div class='form-row bg-light'>
            <div class='form-group col-md-10'>
                    <label>Address</label>
                    <input type='text' name='business[address]' value='<%=business.address%>' class='form-control'>
            </div>
        </div>
        <div class='form-row bg-light'>
            <div class='form-group col-md-3'>
                    <label>Country</label>
                    <input type='text' name='business[country]' value='<%=business.country%>' class='form-control'>
            </div>
            <div class='form-group col-md-3'>
                    <label>City</label>
                    <input type='text' name='business[city]' value='<%=business.city%>' class='form-control'>
            </div>
            <div class='form-group col-md-3'>
                    <label>State</label>
                    <input type='text' name='business[state]' value='<%=business.state%>' class='form-control'>
            </div>
            <div class='form-group col-md-3'>
                    <label>Postal Code</label>
                    <input type='text' name='business[post_code]' value='<%=business.post_code%>' class='form-control'>
            </div>
        </div>

        
        <!-- IMAGES -->
        <h3 class='pt-3 pb-3'>Please upload all that apply:</h3>
        <ul>
        <li><h6>Copy of Articles of Incorporation (or equivalent)</h6></li>
        <li><h6>Proof of URL ownership</h6></li>
        <li><h6> License of the Business - if applicable</h6></li>
        <li><h6>Processing Statement (last 3 months) - if applicable</h6></li>
        <li><h6>Utility bill (up to 3 months old)</h6></li>
        <li><h6>Organigram for the company</h6></li>
        <li><h6>Certificate of Good Standing (up to 3 months old) - if applicable</h6></li>
        </ul>
        <div class='form-group'>
           <div class='card-group'>
           <% images.forEach(function(image) { %>
               <div class="card mw-25 p-1">
                     <a href='<%=image%>'>
                           <img class="card-img-top" src="<%=image%>">
                     </a>
               </div>
           <% }); %>
           </div>
           <label><strong>Images</strong></label>
            <input type="file" name="images" accept="image/*, text/*, .pdf" class = 'btn btn-info m-2' multiple>
        </div>

        <!-- SUBMIT -->
        <div class='form-group'>
            <input type='submit' value='Submit!' class='btn btn-warning'>
        </div>

    </form>
</div>

<% include ../partials/footer.ejs %>