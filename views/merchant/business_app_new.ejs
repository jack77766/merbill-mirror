<% include ../partials/header.ejs %>
    

<div class='container form-format'>
    <div class='title-format'><h3>Please Enter your details</h3></div>
    <form action="/merchant/business_app_new" method="POST" enctype="multipart/form-data">   
         <!-- BUSINESS INFO  -->
        <div class='form-group'>    
            <label>Business Name</label>
            <input type='text' name='name' class='form-control' >
        </div>
        <div class='form-group'>    
            <label>Business Registration Number</label>
            <input type='number' name='registration_number' class='form-control' >
        </div>
        <div class='form-group'>
            <label>Business Website</label>
            <input type='text' name='website' class='form-control' required>
        </div>

        <div class='form-group'>
                <label>Business Phone Number</label>
                <input type='number' name='phone' class='form-control'>
        </div>

        <!-- BUSINESS ADDRESS -->
        <div class='form-group'>
                <label>Address</label>
                <input type='text' name='address' class='form-control'>
        </div>
        <div class='form-group'>
                <label>Country</label>
                <input type='text' name='country' class='form-control'>
        </div>
        <div class='form-group'>
                <label>City</label>
                <input type='text' name='city' class='form-control'>
        </div>
        <div class='form-group'>
                <label>State</label>
                <input type='text' name='state' class='form-control'>
        </div>
        <div class='form-group'>
                <label>Postal Code</label>
                <input type='text' name='post_code' class='form-control'>
        </div>

        
        <!-- IMAGES -->
        <h3>Please upload all that apply:</h3>
        <ul>
        <li><h6>Copy of Articles of Incorporation (or equivalent)</h6></li>
        <li><h6>Proof of URL ownership</h6></li>
        <li><h6> License of the Business - if applicable</h6></li>
        <li><h6>Processing Statement (last 3 months) - if applicable</h6></li>
        <li><h6>Utility bill (up to 3 months old)</h6></li>
        <li><h6>Organigram for the company</h6></li>
        <li><h6>Certificate of Good Standing (up to 3 months old) - if applicable</h6></li>
        </ul>
        <div class='form-group'>
           <label>Images</label>
            <input type="file" name="images" accept="image/*, text/*, .pdf" class = 'btn btn-info' multiple required>
        </div>


        <div class='form-group'>
            <input type='submit' value='Submit!' class='btn btn-warning'>
        </div>

    </form>
</div>

<% include ../partials/footer.ejs %>