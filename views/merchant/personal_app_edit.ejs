<% include ../partials/header.ejs %>
    

<div class='container form-format'>
    <div class='title-format pt-3 pb-3'><h3>Please Enter your details</h3></div>
    <form action="/merchant/personal_app_edit?_method=PUT" method="POST" 
        enctype="multipart/form-data">   
         <!-- PERSONAL -->
         <div class="form-row bg-light">
                <div class='form-group col-md-6'>    
                <label>First Name</label>
                <input type='text' name='merchant[first_name]' value='<%=merchant.first_name%>' class='form-control' >
                </div>
                <div class='form-group col-md-6'>    
                <label>Last Name</label>
                <input type='text' name='merchant[last_name]' value='<%=merchant.last_name%>' class='form-control' >
                </div>
        </div>
        <div class="form-row bg-light">
                <div class='form-group col-md-6'>
                <label>Email</label>
                <input type='email' name='merchant[email]' value='<%=merchant.email%>' class='form-control' required>
                </div>
        </div>
        <div class="form-row bg-light">
                <div class='form-group col-md-6'>
                        <label>Phone Number</label>
                        <input type='number' name='merchant[phone]' value='<%=merchant.phone%>' class='form-control'>
                </div>
        </div>



        <!-- ID -->
        <div class="form-row bg-light">
                <div class='form-group col-md-6'>
                        <label for='merchant[doc_type]'>Document Type</label>
                        <select name='merchant[doc_type]' class='form-control'>
                        <% if(merchant.doc_type == 'Passport') { %>
                        <option selected value = 'Passport'>Passport</option>
                        <option value = 'ID'>Identification Document</option>
                        <% } else { %>
                                <option value = 'Passport'>Passport</option>
                                <option selected value = 'ID'>Identification Document</option> 
                        <% } %>
                        }
                        </select>
                </div>
                <div class='form-group col-md-6'>
                        <label>Document Number</label>
                        <input type='number' name='merchant[doc_num]' value='<%=merchant.doc_num%>' class='form-control'>
                </div>
        </div>
        <div class='form-group'>
                <label><strong>Doc Image</strong></label>
                <div class="card mw-25 p-1">
                        <a href='<%=doc_image%>'>
                                <img class="card-img-top" src="<%=doc_image%>">
                        </a>
                </div>
                <input type="file" name="doc_image" class = 'btn btn-info mt-1' accept="image/*, text/*, .pdf">
        </div>



        <!-- ADDRESS -->
        <div class='form-row bg-light'>
                <div class='form-group col-md-10 '>
                        <label>Address</label>
                        <input type='text' name='merchant[address]' value='<%=merchant.address%>' class='form-control'>
                </div>
        </div>
        <div class='form-row bg-light'>
                <div class='form-group col-md-3'>
                        <label>Country</label>
                        <input type='text' name='merchant[country]' value='<%=merchant.country%>' class='form-control'>
                </div>
                <div class='form-group col-md-3'>
                        <label>City</label>
                        <input type='text' name='merchant[city]' value='<%=merchant.city%>' class='form-control'>
                </div>
                <div class='form-group col-md-3'>
                        <label>State</label>
                        <input type='text' name='merchant[state]' value='<%=merchant.state%>' class='form-control'>
                </div>
                <div class='form-group col-md-3'>
                        <label>Postal Code</label>
                        <input type='text' name='merchant[post_code]' value='<%=merchant.post_code%>' class='form-control'>
                </div>
        </div>

        <h5 class='pt-3 pb-3'>Please upload an utility bill up to 3 months old which confirms the address you have provided above.</h5>
        <div class='form-group'>
                <label><strong>Utility Image</strong></label>       
                <div class="card mw-25 p-1">
                        <a href='<%=util_image%>'>
                                <img class="card-img-top" src="<%=util_image%>">
                        </a>
                </div>
                <input type="file" name="util_image" class = 'btn btn-info mt-1'                     accept="image/*, text/*, .pdf">
        </div>

        <div class='form-group'>
                <input type='submit' value='Submit!' class='btn btn-warning'>
        </div>
    </form>
</div>

<% include ../partials/footer.ejs %>