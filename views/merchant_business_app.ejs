<% include ./partials/header.ejs %>
    

<div class='container form-format'>
    <div class='title-format'><h3>Please Enter your details</h3></div>
    <form action="/merchant_business_app" method="POST" enctype="multipart/form-data">   
         <!-- BUSINESS INFO  -->
        <div class='form-group'>    
            <label>Business Name</label>
            <input type='text' name='name' class='form-control' >
        </div>
        <div class='form-group'>    
            <label>Business Registration Number</label>
            <input type='number' name='registration_number' class='form-control' >
        </div>
        <div class='form-group'>
            <label>Business Website</label>
            <input type='text' name='website' class='form-control' required>
        </div>

        <div class='form-group'>
                <label>Business Phone Number</label>
                <input type='number' name='phone' class='form-control'>
        </div>

        <!-- BUSINESS ADDRESS -->
        <div class='form-group'>
                <label>Address</label>
                <input type='text' name='address' class='form-control'>
        </div>
        <div class='form-group'>
                <label>Country</label>
                <input type='text' name='country' class='form-control'>
        </div>
        <div class='form-group'>
                <label>City</label>
                <input type='text' name='city' class='form-control'>
        </div>
        <div class='form-group'>
                <label>State</label>
                <input type='text' name='state' class='form-control'>
        </div>
        <div class='form-group'>
                <label>Postal Code</label>
                <input type='text' name='post_code' class='form-control'>
        </div>

        
        <!-- IMAGES -->
        <h3>Please upload all that apply:</h3>
        <ul>
        <li><h5>Copy of Articles of Incorporation (or equivalent)</h5></li>
        <li><h5>Proof of URL ownership</h5></li>
        <li><h5> License of the Business - if applicable</h5></li>
        <li><h5>Processing Statement (last 3 months) - if applicable</h5></li>
        <li><h5>Utility bill (up to 3 months old)</h5></li>
        <li><h5>Organigram for the company</h5></li>
        <li><h5>Certificate of Good Standing (up to 3 months old) - if applicable</h5></li>
        </ul>
        <div class='form-group'>
           <label>Images</label>
            <input type="file" name="images" accept="image/*, text/*, .pdf" class = 'btn btn-info' multiple required>
        </div>


        <div class='form-group'>
            <input type='submit' value='Submit!' class='btn btn-warning'>
        </div>

    </form>
</div>

<% include ./partials/footer.ejs %>