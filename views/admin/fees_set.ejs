<% include ../partials/header.ejs %>

<div class='container p-2'>

      <h4 class='mt-3 mb-3'>Fees for <%=merchant.first_name%> <%=merchant.last_name%></h4>

      <form action='/admin/<%=merchant.id%>/fees' method='POST'>
         <div class='form-group'>    
             <label>Deposit Fee</label>
             <input type='number' name='deposit_fee' min='0' value='<%=merchant.deposit_fee%>' class='form-control'>
         </div>
         <div class='form-group'>    
               <label>Withdrawal Fee</label>
               <input type='number' name='withdrawal_fee' min='0' value='<%=merchant.withdrawal_fee%>' class='form-control'>
         </div>
         <div class='form-group'>    
            <label>Percentage</label>
            <input type='number' name='percentage' step='0.01' min='0' value='<%=merchant.percentage%>' class='form-control'>
         </div>
         <input type='submit' value='Submit' class='btn btn-primary'>
      </form>
</div>

<% include ../partials/footer.ejs %>