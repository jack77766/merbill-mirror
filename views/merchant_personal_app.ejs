<% include ./partials/header.ejs %>
    

<div class='container form-format'>
    <div class='title-format'><h3>Please Enter your details</h3></div>
    <form action="/merchant_personal_app" method="POST" enctype="multipart/form-data">   
         <!-- PERSONAL -->
        <div class='form-group'>    
            <label>First Name</label>
            <input type='text' name='first_name' class='form-control' >
        </div>
        <div class='form-group'>    
            <label>Last Name</label>
            <input type='text' name='last_name' class='form-control' >
        </div>
        <div class='form-group'>
            <label>Email</label>
            <input type='email' name='email' class='form-control' required>
        </div>
        <div class='form-group'>
                <label>Phone Number</label>
                <input type='number' name='phone' class='form-control'>
        </div>



        <!-- ID -->
        <div class='form-group'>
                <label for='doc_type'>Document Type</label>
                <select id='doc_type' class='form-control'>
                    <option value = 'passport'>Passport</option>
                    <option value = 'id'>Identification Document</option>
                </select>
        </div>
        <div class='form-group'>
                <label>Document Number</label>
                <input type='number' name='doc_num' class='form-control'>
        </div>
        <div class='form-group'>
                <label><strong>Doc Image</strong></label>
                <input type="file" name="doc_image" class = 'btn btn-info' accept="image/*, text/*, .pdf" required>
        </div>



        <!-- ADDRESS -->
        <div class='form-group'>
                <label>Address</label>
                <input type='text' name='address' class='form-control'>
        </div>
        <div class='form-group'>
                <label>Country</label>
                <input type='text' name='country' class='form-control'>
        </div>
        <div class='form-group'>
                <label>City</label>
                <input type='text' name='city' class='form-control'>
        </div>
        <div class='form-group'>
                <label>State</label>
                <input type='text' name='state' class='form-control'>
        </div>
        <div class='form-group'>
                <label>Postal Code</label>
                <input type='text' name='post_code' class='form-control'>
        </div>

        <h5>Please upload an utility bill up to 3 months old which confirms the address you have provided above.</h5>
        <div class='form-group'>
                <label><strong>Utility Image</strong></label>          
                <input type="file" name="util_image" class = 'btn btn-info'                     accept="image/*, text/*, .pdf" required>
        </div>

        <div class='form-group'>
                <input type='submit' value='Submit!' class='btn btn-warning'>
        </div>
    </form>
</div>

<% include ./partials/footer.ejs %>